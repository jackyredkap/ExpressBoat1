<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:text="เรือประจำทาง (ด่วนธรรมดาไม่มีธง)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:textSize="11dp"
            android:text="เส้นทาง : นนทบุรี - วัดราชสิงขร" />




        <ImageView
            android:id="@+id/noflag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/noflag1" />

        <ImageView
            android:id="@+id/noflag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/noflag1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/noflag1"
            android:src="@drawable/noflag2" />

        <ImageView
            android:id="@+id/noflag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/noflag2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/noflag2"
            android:src="@drawable/noflag3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/noflag1"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:text="เรือด่วนพิเศษธงส้ม" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/noflag1"
            android:layout_marginTop="30dp"
            android:textSize="11dp"
            android:text="เส้นทาง : นนทบุรี - วัดราชสิงขร" />


        <ImageView
            android:id="@+id/orange1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/noflag1"
            android:layout_marginTop="50dp"
            android:src="@drawable/orange1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/orange1"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:text="เรือด่วนพิเศษธงเหลือง" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/orange1"
            android:layout_marginTop="30dp"
            android:textSize="11dp"
            android:text="เส้นทาง : นนทบุรี - วัดราชสิงขร" />

        <ImageView
            android:id="@+id/yellow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/orange1"
            android:layout_marginTop="50dp"
            android:src="@drawable/yellow1" />
        <ImageView
            android:id="@+id/yellow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag2"
            android:layout_alignTop="@+id/yellow1"
            android:src="@drawable/yellow2" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/yellow1"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:text="เรือด่วนพิเศษธงเขียว" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/yellow1"
            android:layout_marginTop="30dp"
            android:textSize="11dp"
            android:text="เส้นทาง : นนทบุรี - สาทร" />

        <ImageView
            android:id="@+id/green1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag1"
            android:layout_below="@+id/yellow1"
            android:layout_marginTop="50dp"
            android:src="@drawable/green1" />
        <ImageView
            android:id="@+id/green2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag2"
            android:layout_alignTop="@+id/green1"
            android:src="@drawable/green2" />
        <ImageView
            android:id="@+id/green3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/noflag3"
            android:layout_alignTop="@+id/green1"
            android:src="@drawable/green3" />

</RelativeLayout>

    </ScrollView>